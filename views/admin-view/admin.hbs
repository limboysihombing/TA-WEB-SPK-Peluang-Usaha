<div class="container">
  <div class="row">
    <div class="col-12">
      <div class="card shadow border-bottom-info">
        <div class="card-header d-flex flex-row align-items-center justify-content-between">
          <h6 class="m-0 font-weight-bold">Daftar Usaha</h6>
          <div>
            <a href="/admin/form_tambah_usaha" class="btn btn-info btn-sm btn-icon-split">
              <span class="icon text-white-50">
                <i class="fas fa-plus"></i>
              </span>
              <span class="text">Tambah Data</span>
            </a>
            <a href="#" class="btn btn-secondary btn-sm btn-icon-split">
              <span class="icon text-white-50">
                <i class="fas fa-filter"></i>
              </span>
              <span class="text">Filter Data</span>
            </a>
          </div>
        </div>
        <div class="card-body">

          {{#if msg}}
          <div class="alert alert-success alert-dismissible fade show" role="alert">
            <strong>{{msg}}</strong>
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          {{/if}}

          <div class="table-reponsive">
            <table class="table table-hover">
              <thead>
                <tr>
                  <th scope="col">No</th>
                  <th>Nama Usaha</th>
                  <th>Jenis</th>
                  <th>Modal</th>
                  <th>aksi</th>
                </tr>
              </thead>
              <tbody>
                {{#each daftarUsaha}}
                <tr>
                  <td>{{this.id_usaha}}</td>
                  <td>{{this.nama_usaha}}</td>
                  <td>{{this.jenis_usaha}}</td>
                  <td>{{this.modal}}</td>
                  <td>
                      <a href="/admin/detail_usaha/{{this.id_usaha}}" class="btn btn-success btn-sm btn-icon-split">
                      <span class="icon text-white-50">
                        <i class="fas fa-list-alt"></i>
                      </span>
                      <span class="text">Detail</span>
                    </a>
                    <a href="/admin/detail_usaha/{{this.id_usaha}}" class="btn btn-warning btn-sm btn-icon-split">
                      <span class="icon text-white-50">
                        <i class="fas fa-edit"></i>
                      </span>
                      <span class="text">Edit</span>
                    </a>
                    <a href="/admin/hapus_usaha/{{this.id_usaha}}" class="btn btn-sm btn-danger btn-icon-split">
                      <span class="icon text-white-50">
                        <i class="fas fa-trash"></i>
                      </span>
                      <span class="text"> Hapus</span>
                    </a>
                  
                  </td>
                </tr>
                {{/each}}
              </tbody>
            </table>

          </div>
        </div>
      </div>
    </div>
  </div>
</div>